<!-- Booking Start -->
<div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container">
        @using (Html.BeginForm("Package", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="booking p-5">
                <div class="row g-5 align-items-center">
                    <div class="col-md-6 text-white">
                        <h6 class="text-white text-uppercase">Booking</h6>
                        <h1 class="text-white mb-4">Online Booking</h1>
                        <p class="mb-4">Cicerone offers a variety of online booking tips and tricks to ensure a memorable travel experience. To book early, explore diverse tour packages and destinations, read user reviews, sign up for exclusive offers, customize your experience, contact customer support, review itinerary details, consider travel insurance, secure payment, and be flexible with travel dates or itineraries.</p>
                        <p class="mb-4">By following these tips, you can secure your spot and ensure availability on your desired travel dates. Cicerone's commitment to providing the best possible experience ensures a seamless and enjoyable journey. Start your adventure today and let Cicerone guide you to unforgettable destinations worldwide.</p>
                        <a class="btn btn-outline-light py-3 px-5 mt-2" href="">Read More</a>
                    </div>
                    <div class="col-md-6">

                        <h1 class="text-white mb-4">Book A Tour</h1>
                        <form>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        @*<input type="text" class="form-control bg-transparent" id="name" placeholder="Your Name">
                <label for="name">Your Name</label>*@
                                        @Html.TextBoxFor(x => x.tour_username, new { @class = "form-control bg-transparent text-primary", @placeholder = "Full Name" })
                                    </div>
                                    <span style="color:red">   @Html.ValidationMessageFor(x => x.tour_username) </span>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        @*<input type="email" class="form-control bg-transparent" id="email" placeholder="Your Email">
                <label for="email">Your Email</label>*@
                                        @Html.TextBoxFor(x => x.tour_usermail, new { @class = "form-control bg-transparent text-primary", @placeholder = "Your Email" })
                                    </div>
                                    <span style="color:red">   @Html.ValidationMessageFor(x => x.tour_usermail) </span>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating date" id="date3" data-target-input="nearest">
                                        @*<input type="text" class="form-control bg-transparent datetimepicker-input" id="datetime" placeholder="Date & Time" data-target="#date3" data-toggle="datetimepicker" />
                <label for="datetime">Date & Time</label>*@
                                        @Html.TextBoxFor(x => x.tour_date, new { @class = "form-control bg-transparent text-primary", @placeholder = "Date & Time" })
                                    </div>
                                    <span style="color:red">   @Html.ValidationMessageFor(x => x.tour_date) </span>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        @Html.TextBoxFor(x => x.total_destination, new { @class = "form-control bg-transparent text-primary", @placeholder = "Destination" })


                                        @*<label for="select1">Destination</label>*@
                                    </div>
                                    <span style="color:red">   @Html.ValidationMessageFor(x => x.total_destination) </span>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        @*<textarea class="form-control bg-transparent" placeholder="Special Request" id="message" style="height: 100px"></textarea>
                <label for="message">Special Request</label>*@
                                        @Html.TextBoxFor(x => x.tour_details, new { @class = "form-control bg-transparent text-primary", @placeholder = "Special Request" })
                                    </div>
                                    <span style="color:red">   @Html.ValidationMessageFor(x => x.tour_details) </span>
                                </div>

                                <div class="form-group">
                                    <p style="color:red">@ViewBag.error</p>
                                </div>
                                
                                <div class="col-12">
                                    @* <button class="btn btn-outline-light w-100 py-3" type="submit">Book Now</button>*@
                                    <input type="submit" value="Book Now" class="btn btn-outline-light w-100 py-3" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        }

    </div>
</div>
<!-- Booking Start -->
